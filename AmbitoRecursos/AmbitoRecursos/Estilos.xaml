<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AmbitoRecursos.Estilos"
             BackgroundColor="{StaticResource PageBack}">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout.Resources>
                <ResourceDictionary>
                    <Style x:Key="LabelNormal" TargetType="Label">
                        <Setter Property="TextColor" Value="{StaticResource NormaTxtColor}"></Setter>
                    </Style>
                    <Style x:Key="ButtonFont" TargetType="Button">
                        <Setter Property="FontSize" Value="Medium"></Setter>
                        <Setter Property="FontAttributes" Value="Bold"></Setter>
                    </Style>
                </ResourceDictionary>
            </StackLayout.Resources>
            <Label Text="Resource Dictionary"
                   Style="{StaticResource LabelHead}"></Label>
            <Label Text="Recursos Xaml son definiciones de objetos que se utilizan mas de una vez, estos son los recursos."
                   Margin="10, 20, 20, 0"></Label>
            <Button HorizontalOptions="Center"
                    Text="enter"
                    TextColor="{StaticResource NormaTxtColor}"
                    Style="{StaticResource ButtonFont}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>